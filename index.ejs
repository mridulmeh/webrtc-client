	<body>
    <!-- Username must fit to games target username(default = player1) -->
	
	<div id="QRCode">
		<div id="QRCodeImg"></div>
		<div class="glyphicon glyphicon-remove exitQR"></div>
</div>
	<div class="header">
	
		<div class="menu">
			<span class="glyphicon glyphicon-chevron-down" id="menuDown" onclick="showDropdown()"></span>
			<span class="glyphicon glyphicon-chevron-up" id="menuUp" onclick="showDropdown()"></span>
			<div class="menuDropdown">
				<ul>
					<li onclick="showQRCode()">Scan QR Code</li>
					<li onclick="changeToFullScreen()">Switch to full Screen</li>
					<li><a href="/joystick/index.html" target="_blank">Get link for Gamepad</a></li>
				</ul>
			</div>
		</div>
		<div class="gameName">GAME DEMO</div>
		<div class="player1">
			<input type="text" id="playerName" value="player1" style="display:none"></input>
			<button type="submit" id="ConnectBtn">CONNECT PLAYER ONE</button>
			<button class="connected">PLAYER CONNECTED </button>
		</div>
